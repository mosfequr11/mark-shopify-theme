{{ 'mr-faq.css' | asset_url | stylesheet_tag }}
<script src="{{ 'mr-main.js' | asset_url }}" defer="defer"></script>

<section class="faq-sec">
  <div class="page-width">
    <div class="sec-title">
      <h2>{{ section.settings.faq_heading }}</h2>
    </div>
    <div class="section-center">
      {% for block in section.blocks %}
        <article class="question" {{ block.shopify_attributes }}>
          <!-- question title -->
          <div class="question-title">
            <p>{{ block.settings.question }}</p>
            <button type="button" class="question-btn">
              <span class="plus-icon">
                <i class="far fa-plus-square"></i>
              </span>
              <span class="minus-icon">
                <i class="far fa-minus-square"></i>
              </span>
            </button>
          </div>
          <!-- question text -->
          <div class="question-text">
            <p>{{ block.settings.answer }}</p>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQs",
  "settings": [
    {
      "type": "text",
      "id": "faq_heading",
      "label": "Heading",
      "default": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQs",
      "blocks": [{ "type": "faq_item" }, { "type": "faq_item" }]
    }
  ]
}
{% endschema %}
