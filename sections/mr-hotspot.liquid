{%- style -%}
{%- endstyle -%}
{{ 'mr-image-hotspot.css' | asset_url | stylesheet_tag }}

<div class="hotspot-section">
  {% if section.settings.bg_image %}
    <div class="hotspot-image">
      <img src="{{ section.settings.bg_image | img_url: 'master' }}" alt="Hotspot background">
      {% for block in section.blocks %}
        {% if block.type == 'hotspot' %}
          <a
            href="{{ block.settings.link }}"
            class="hotspot"
            style="top:{{ block.settings.vertical }}%; left:{{ block.settings.horizontal }}%;"
            title="{{ block.settings.mr_title }}"
          >
            <span class="hotspot-dot"></span>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  {% endif %}
</div>
{% schema %}
{
  "name": "Image Hotspot",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image"
    }
  ],
  "blocks": [
    {
      "type": "hotspot",
      "name": "Hotspot",
      "settings": [
        {
          "type": "text",
          "id": "mr_title",
          "label": "Tooltip text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        },
        {
          "type": "range",
          "id": "horizontal",
          "label": "Horizontal position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 50
        },
        {
          "type": "range",
          "id": "vertical",
          "label": "Vertical position (%)",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 30
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Hotspot"
    }
  ]
}
{% endschema %}
